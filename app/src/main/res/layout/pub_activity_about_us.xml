<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/about_iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/about_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/about_iv_icon"
        android:layout_alignRight="@+id/about_iv_icon"
        android:layout_marginTop="170dp"
        android:gravity="center_horizontal"
        android:text="v1.0.0"
        android:textColor="@color/pub_color_gray_666"
        android:textSize="@dimen/text_h14" />

    <TextView
        android:id="@+id/about_tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_version"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="@string/app_name"
        android:textColor="@color/pub_color_black"
        android:textSize="@dimen/text_h14" />


    <TextView
        android:id="@+id/about_tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="Copyright Â© 2018 . ALL RIGHTS RESERVED."
        android:textColor="@color/pub_color_black"
        android:textSize="@dimen/text_h10" />

</RelativeLayout>
